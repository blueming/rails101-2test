<div class="col-md-12">
  <div class="group" style="margin-bottom:50px;">
    <%= link_to("New group", new_group_path, class: "btn btn-primary pull-right" ) %>
  </div>
  <br>
  <table class="table table-hover">
    <thead>
      <tr>
        <td>#</td>
        <td>Title</td>
        <td>Description</td>
        <td>Create</td>
      </tr>
    </thead>
    <tbody>
      <% @group.each do |group| %>
       <%= render :partial => "group_item", :collection => @groups, :as => :group %>
    </tbody>
  </table>
</div>
